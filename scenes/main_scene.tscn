func _ready():
	get_tree().connect(\"node_added\", _node_added)


func _physics_process(delta):
	if len(shapecast.collision_result) > 0:
		var target 
		var count = shapecast.get_collision_count()
		for index in count:
			var collider := shapecast.get_collider(index)
			if collider != null and collider.is_in_group(\"player\"):
				target = collider
				break
		get_tree().call_group(\"enemy\", \"act\", target)
	pass


